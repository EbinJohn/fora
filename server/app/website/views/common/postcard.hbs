<li class="{{view}}" data-url="/{{forum.stub}}/{{id}}">
    <div class="item-wrap">
        {{#if image}} 
        <div class="image" style="background-image:url({{image}})"></div>
        {{/if}}
        <div class="content-wrap">
            <div class="content">
                <h2><a href="/{{forum.stub}}/{{id}}">{{title}}</a></h2>
                {{{content}}}
            </div>
            <div class="overlay"></div>
            <span class="activity">
                <i class="icon-comment"></i> 93<br />
                <i class="icon-thumbs-up-alt"></i> 10k
            </span>
            <p class="links">
                <img src="{{createdBy.assetPath}}/{{createdBy.domain}}-{{createdBy.username}}_t.jpg" alt="{{createdBy.name}}" />
                <span class="text">
                    <a href="{{userUrl createdBy}}">{{createdBy.name}}</a><span class="light-text"><br />
                    in </span><a href="/{{forum.stub}}">{{forum.name}}</a>
                </span>
            </p>
        </div>
    </div>
</li>

